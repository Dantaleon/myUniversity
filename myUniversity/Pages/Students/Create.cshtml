@page
@model myUniversity.Pages.Students.CreateModel
@{
}

<br>
<h2>Новый студен</h2>

@if (Model.errorMessage.Length > 0)
 {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
    </div> 
 }

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Фамилия</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="lastName" value="@Model.studentInfo.lastname">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Имя</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="firstName" value="@Model.studentInfo.firstname">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Отчество</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="thirdName" value="@Model.studentInfo.thirdname">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Группа</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="gruppa" value="@Model.studentInfo.gruppa">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Дата рождения</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="birthDate" value="@Model.studentInfo.birthDate">
        </div>
    </div>

    @if (@Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type ="submit" class="btn-primary">Создать</button>
        </div>
        <div class="col-sm-6">
            <a class="btn-outline-primary" href="/" role="button">Отмена</a>
        </div>
    </div>
</form>